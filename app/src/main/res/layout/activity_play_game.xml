<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayGame">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/burj_khalifa" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgMachine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="80dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slot" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAnimation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".34"
        app:srcCompat="@drawable/gif_down" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAnimation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAnimation1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".34"
        app:srcCompat="@drawable/gif_down" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAnimation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAnimation2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".34"
        app:srcCompat="@drawable/gif_down" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAnimation4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAnimation3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".34"
        app:srcCompat="@drawable/gif_down" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAnimation5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAnimation4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".34"
        app:srcCompat="@drawable/gif_down" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAnimation6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAnimation5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".34"
        app:srcCompat="@drawable/gif_down" />

</androidx.constraintlayout.widget.ConstraintLayout>